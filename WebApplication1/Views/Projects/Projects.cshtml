@* it will go to layout by default if I remove layout = "layout" *@
@{
    Layout = "_Layout";
}

<div class="backoffice-wrapper">
    <aside id="sidebar">
        <section class="logotype">
            <a href="#">
                <img src="~/Images/AlphaLogo.svg" alt="alpha" />
                <span>alpha</span>
            </a>
        </section>
        <nav class="nav-links">
            <a href="projects.html" class="nav-link active">
                <i class="fa-duotone fa-solid fa-briefcase"></i>
                <span>Projects</span>
            </a>
            <a href="#" class="nav-link">
                <i class="fa-duotone fa-solid fa-handshake"></i>
                <span>Clients</span>
            </a>
            <a href="#" class="nav-link">
                <i class="fa-duotone fa-solid fa-user-group"></i>
                <span>Members</span>
            </a>
        </nav>
    </aside>
    <main>
        <header id="header">
            <form class="search-form"
                  method="get"
                  asp-controller=""
                  asp-action=""
                  novalidate>
                <i class="fa-duotone fa-solid fa-magnifying-glass"></i>
                <input type="search"
                       class="form-search-input"
                       placeholder="search anything..." />
            </form>

            <div id="notification-container">
                <button id="notification-dropdown-menu"
                        type="button"
                        data-type="dropdown"
                        data-target="#notification-dropdown"
                        class="btn-notification btn-notification-trigger">
                    <i class="dot dot-red fa-solid fa-circle"></i>
                    <i class="fa-duotone fa-solid fa-bell"
                       style="--fa-primary-opacity: 0.4; --fa-secondary-opacity: 1"></i>
                </button>

                <div id="notification-dropdown" class="dropdown">
                    <div class="badge-dropdown-header">
                        <h4>Notifications</h4>
                        <div class="badge badge-red">0</div>
                    </div>
                    <div class="divider"></div>

                    <div class="notifications">
                        <div class="notification">
                            <div class="user-image">
                                <img src="~/Images/tommy-avatar.svg"
                                     alt="template avatar" />
                            </div>
                            <span class="message">Fredrik Nilsson signed in</span>
                            <span class="time">5 min ago</span>
                            <button class="btn-close"></button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="gear-container">
                <button id="gear-dropdown-menu"
                        type="button"
                        data-type="dropdown"
                        data-target="#account-dropdown"
                        class="btn-gear btn-gear-trigger">
                    <i class="fa-solid fa-gear"></i>
                </button>
            </div>

            <div id="account-container">
                <button id="account-dropdown-menu"
                        type="button"
                        data-type="dropdown"
                        data-target="#account-dropdown"
                        class="btn-account">
                    <img src="~/Images/tommy-avatar.svg"
                         alt="template avatar" />
                </button>
                <div id="account-dropdown" class="dropdown">
                    <div class="dropdown-header">
                        <div class="account-name">
                            <img src="~/Images/tommy-avatar.svg"
                                 alt="template avatar" />
                            <span>Fredrik Nilsson</span>
                        </div>
                    </div>

                    <div class="dropdown-body">
                        <a class="dropdown-action">
                            <div class="settings settings-toggle">
                                <label for="mini-menu-dark-mode-toggle"
                                       class="settings-left">
                                    <i class="fa-solid fa-gear"></i>
                                    <span>Dark Mode</span>
                                </label>
                                <label class="toggle-darkmode">
                                    <input id="mini-menu-dark-mode-toggle" type="checkbox" />
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </a>
                    </div>
                    <div class="divider"></div>
                    <nav class="dropdown-actions">
                        <a class="dropdown-action" href="#">
                            <i class="fa-duotone fa-solid fa-arrow-right-from-bracket"></i>
                            <span>Logout</span>
                        </a>
                    </nav>
                </div>
            </div>
        </header>
        <div id="projects" class="page">
            <div class="page-header">
                <h1>Projects</h1>
                <button type="button"
                        class="btn"
                        data-type="modal"
                        data-target="#add-project-modal">
                    <i class="fa-duotone fa-solid fa-plus"></i>
                    <span>Add Project</span>
                </button>
            </div>

            <section class="project-list">
                <div class="project card">
                    <div class="card-header">
                        <div class="project-image">
                            <img src="~/Images/company_logo.svg"
                                 alt="template project" />
                        </div>
                        <h6 class="project-name">Fredrik AB</h6>
                        <span class="client-name">IKEA</span>

                        <div id="project-actions-container">
                            <button id="project-dropdown-menu"
                                    type="button"
                                    data-type="dropdown"
                                    data-target="#edith-dropdown-1"
                                    class="btn-actions open-edith-trigger">
                                <i class="fa-duotone fa-solid fa-ellipsis"></i>
                            </button>
                            <div id="edith-dropdown-1" class="edith-dropdown">
                                <div class="dropdown-body">
                                    <nav class="dropdown-actions">
                                        <a data-type="modal"
                                           data-target="#add-edit-project-modal"
                                           id="edit-project-open"
                                           class="dropdown-action"
                                           href="#">
                                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                            <span>Edit</span>
                                        </a>
                                        <a class="dropdown-action" href="#">
                                            <i class="fa-duotone fa-solid fa-user-plus"></i>
                                            <span>Add Member</span>
                                        </a>
                                        <div class="divider"></div>
                                        <a class="dropdown-action danger" href="#">
                                            <i class="fa-duotone fa-solid fa-trash-can"></i>
                                            <span>Delete Project</span>
                                        </a>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Lorem ipsum dolor sit amet dsdfsfsdfconsectetur </p>
                    </div>
                    <div class="card-footer">
                        <div class="badge badge">
                            <i class="fa-duotone fa-solid fa-clock"></i>
                            <span>1 week left</span>
                        </div>
                        <div class="members">
                            <div class="user-image">
                                <img src="/Images/Avatar.svg">
                            </div>
                            <div class="user-image">
                                <img src="/Images/Avatar.svg">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="project card">
                    <div class="card-header">
                        <div class="project-image">
                            <img src="~/Images/company_logo.svg"
                                 alt="template project" />
                        </div>
                        <h6 class="project-name">Fredrik AB</h6>
                        <span class="client-name">IKEA</span>

                        <div id="project-actions-container">
                            <button id="project-dropdown-menu"
                                    type="button"
                                    data-type="dropdown"
                                    data-target="#edith-dropdown-2"
                                    class="btn-actions open-edith-trigger">
                                <i class="fa-duotone fa-solid fa-ellipsis"></i>
                            </button>
                            <div id="edith-dropdown-2" class="edith-dropdown">
                                <div class="dropdown-body">
                                    <nav class="dropdown-actions">
                                        <a data-type="modal"
                                           data-target="#add-edit-project-modal"
                                           id="edit-project-open"
                                           class="dropdown-action"
                                           href="#">
                                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                            <span>Edit</span>
                                        </a>
                                        <a class="dropdown-action" href="#">
                                            <i class="fa-duotone fa-solid fa-user-plus"></i>
                                            <span>Add Member</span>
                                        </a>
                                        <div class="divider"></div>
                                        <a class="dropdown-action danger" href="#">
                                            <i class="fa-duotone fa-solid fa-trash-can"></i>
                                            <span>Delete Project</span>
                                        </a>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Lorem ipsum dolor sit amet dsdfsfsdfconsectetur </p>
                    </div>
                    <div class="card-footer">
                        <div class="badge badge">
                            <i class="fa-duotone fa-solid fa-clock"></i>
                            <span>1 week left</span>
                        </div>
                        <div class="members">
                            <div class="user-image">
                                <img src="/Images/Avatar.svg">
                            </div>
                            <div class="user-image">
                                <img src="/Images/Avatar.svg">
                            </div>
                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main>
</div>

@await Html.PartialAsync("_AddProjectModalPartial")
@await Html.PartialAsync("_EditProjectModalPartial")

