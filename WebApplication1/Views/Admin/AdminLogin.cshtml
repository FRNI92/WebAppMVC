@{
    Layout = "_Layout";
    ViewBag.Title = "Admin Login";
}
@model SignInFormModel;

<div class="admin-login-wrapper">

    <div class="login-info-panel">
        <h1>Welcome to</h1>
        <h2>Admin Panel</h2>
        <p>Lorem ipsum dolor sit amet...</p>
    </div>
    <div class="admin-login-panel">
        <div id="admin-card" class="admin-card">
            <div class="card-header">
                <h1>Login</h1>
            </div>
            <div class="card-body">
                @* google *@
                <form method="post" asp-controller="Account" asp-action="SignInWithGoogle">
                    <button class="btn-external" type="submit">
                        <img src="@Url.Content("~/Images/google-icon.svg")" alt="google icon" />
                        <span>Login with Google</span>
                    </button>
                </form>
                <div class="or-divider"><span>OR</span></div>
                    <!-- Normal login form -->
                <form method="post" asp-controller="Account" asp-action="SignIn" novalidate>
                    <div class="form-group">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-input" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-input" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="admin-checkbox-row">
                        <label class="checkbox">
                            <input type="checkbox">
                            <span>Remember me</span>
                        </label>
                        <a href="#">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn">Log In</button>
                </form>
            </div>
            <div class="card-footer">
                <span>Dont have an account?</span><a asp-controller="Account" asp-action="SignUp">Sign Up</a>
            </div>
        </div>
    </div>
</div>