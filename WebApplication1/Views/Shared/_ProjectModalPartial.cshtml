@model ProjectFormModel

<div id="addProjectModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Add Project</h3>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <form novalidate method="post" asp-action="ProjectModal" asp-controller="Projects">
            <div class="image-previewer square">
                <img src="" class="image-preview" />
                <input asp-for="Image" type="file" accept="image/*" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectName"></label>
                <div class="field-group">
                    <input asp-for="ProjectName" placeholder="Project" />
                    <span asp-validation-for="ProjectName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="field-group">
                    <input asp-for="Description" placeholder="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
         
            <button type="submit" class="btn btn-submit btn-blue">Create</button>
        </form>
    </div>
</div>